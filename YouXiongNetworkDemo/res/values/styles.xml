<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Platform.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    
    
    <style name="Theme.AppStartLoad" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.AppStartLoadTranslucent" parent="android:Theme.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="MainTitleStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">@dimen/i_48dp</item>
        <item name="android:padding">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/item_selector</item>
    </style>
    <style name="ProductTextStyle" parent="MainTitleStyle">
        <item name="android:padding">5dip</item>
        <item name="android:layout_margin">6dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/product_text_selector</item>
    </style>
    
    <!-- 
    	输入文本框的样式
    -->
    
    <style name="EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:padding">6.0dip</item>
        <item name="android:minHeight">48.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
    </style>
    
    <style name="base_small_progressbar_style">
        <item name="android:maxWidth">18.5dip</item>
        <item name="android:maxHeight">18.5dip</item>
        <item name="android:indeterminateDrawable">@anim/base_loading_small_anim</item>
        <item name="android:minWidth">18.5dip</item>
        <item name="android:minHeight">18.5dip</item>
    </style>
    
    <style name="LayoutAuto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--  分割线（设置）样式  -->
    <style name="DivideLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0dp</item>
        <item name="android:background">@color/divide_line</item>
    </style>
    <style name="BaseButtonCommitStyle" parent="LayoutAuto">
        <item name="android:minHeight">@dimen/button_commit_minheight</item>
        <item name="android:background">@drawable/btnbg_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18.0sp</item>
    </style>
    <style name="ButtonCommitStyle" parent="BaseButtonCommitStyle">
        <item name="android:layout_marginLeft">@dimen/LargerPadding</item>
        <item name="android:layout_marginRight">@dimen/LargerPadding</item>
        <item name="android:layout_marginTop">20.0dp</item>
        <item name="android:layout_marginBottom">20.0dp</item>
    </style>
    
    <!-- 设置字体样式 -->
    <style name="TextSettingStyle" parent="LayoutAuto">
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="PopupTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_background_selector</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="STextStyleOne">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="STextStyleTwo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FC600C</item>
    </style>
<style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

</resources>
