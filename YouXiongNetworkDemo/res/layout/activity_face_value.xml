<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >
	
	    <ImageView
	        android:id="@+id/user_photo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:src="@drawable/ic_launcher"
	        android:contentDescription="@string/contentDescription" />
	
	    <TextView 
	        android:id="@+id/user_real_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:textSize="18sp" />
	
	    <TextView
	        android:id="@+id/user_card_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:textSize="18sp" />
	    
	    <View
	        style="@style/DivideLineStyle"
	        android:layout_marginTop="16dp" />
	
	    <LinearLayout
	        android:id="@+id/view_face_value_real"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/item_selector"
	        android:gravity="center_vertical"
	        android:minHeight="48dp"
	        android:paddingLeft="16dp"
	        android:paddingRight="16dp" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/face_value_real"
	            android:textSize="16sp" />
	
	        <TextView
	            android:id="@+id/face_value_real"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:gravity="right"
	            android:textSize="16sp" />
	    </LinearLayout>
	
	    <View style="@style/DivideLineStyle" />
	
	    <LinearLayout
	        android:id="@+id/view_face_value_potential"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/item_selector"
	        android:gravity="center_vertical"
	        android:minHeight="48dp"
	        android:paddingLeft="16dp"
	        android:paddingRight="16dp" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/face_value_potential"
	            android:textSize="16sp" />
	
	        <TextView
	            android:id="@+id/face_value_potential"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:gravity="right"
	            android:textSize="16sp" />
	    </LinearLayout>
	
	    <View style="@style/DivideLineStyle" />
	
	    <LinearLayout
	        android:id="@+id/view_face_value_add"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/item_selector"
	        android:gravity="center_vertical"
	        android:minHeight="48dp"
	        android:paddingLeft="16dp"
	        android:paddingRight="16dp" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/face_value_add"
	            android:textSize="16sp" />
	
	        <TextView
	            android:id="@+id/face_value_add"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:gravity="right"
	            android:textSize="16sp" />
	    </LinearLayout>
	
	    <View style="@style/DivideLineStyle" />
	</LinearLayout>

	<include layout="@layout/hint_loading_layout"/>

</FrameLayout>