<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/item_transmit_card" />

        <TextView 
            android:id="@+id/goto_transmit_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#FFA0C864"
            android:padding="10dip"
            android:text="免费转发给商友" />

        <TextView 
            android:id="@+id/goto_transmit_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#FFA0C864"
            android:padding="10dip"
            android:text="转发到市场中" />

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dip"
	            android:padding="10dip"
	            android:text="设置搜索条件" />
	
	        <EditText
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_margin="6dip"
	            android:hint="请输入关键字"
	            android:padding="10dip" />
	
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="25dip"
	            android:layout_marginRight="25dip"
	            android:background="@drawable/button_selector"
	            android:gravity="center"
	            android:padding="12dip"
	            android:text="保存并搜索" />
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dip"
	            android:gravity="center"
	            android:padding="10dip"
	            android:text="从搜索结果中，共找到806个符合您转发条件的用户" />
	        
	        <me.youxiong.person.view.HorizontalListView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:background="@drawable/button_selector"
	            android:gravity="center"
	            android:padding="12dip"
	            android:text="确定转发对象" />
        </LinearLayout>
        
    </LinearLayout>

</ScrollView>