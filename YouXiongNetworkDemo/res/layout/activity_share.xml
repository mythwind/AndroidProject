<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_share_weixin_friend"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_share_selector"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/fxweixin"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="微信好友"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tv_share_weixin_circle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_share_selector"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/fxpengyq"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="朋友圈"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tv_share_qq_friend"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_share_selector"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/fxqq"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="QQ 好友"
            android:textColor="#666" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_share_qq_zone"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_share_selector"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/fxqqkj"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:text="QQ 空间"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tv_share_sina_weibo"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_share_selector"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/fxwb"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:text="微博"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tv_share_link"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_share_selector"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/fxlj"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:text="微博"
            android:textColor="#666" />
    </LinearLayout>
    
</LinearLayout>
