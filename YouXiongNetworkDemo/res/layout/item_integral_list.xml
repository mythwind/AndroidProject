<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/button_commit_minheight"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tv_item_intagral_value"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:minWidth="100dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="5dip"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FF8600" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/tv_item_intagral_value"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_intagral_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_intagral_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>
   
</RelativeLayout>
