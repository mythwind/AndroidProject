<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View style="@style/DivideLineStyle" />
        <LinearLayout
            android:id="@+id/view_deduction_time_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_start"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deduction_tv_time_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:gravity="right"
                android:clickable="true"
                android:focusable="false"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/DivideLineStyle" />
        <LinearLayout
            android:id="@+id/view_deduction_time_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_end"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deduction_tv_time_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:gravity="right"
                android:clickable="true"
                android:focusable="false"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/DivideLineStyle" />
        <LinearLayout
            android:id="@+id/view_deduction_keywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keywords"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deduction_ed_keywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:hint="@string/hint_keywords"
                android:gravity="right"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/DivideLineStyle" />
       
        <TextView
            android:id="@+id/confirm"
            style="@style/ButtonCommitStyle"
	        android:text="@string/deduction_search" />
        
        <include layout="@layout/layout_p_deduction_search" />
        
    </LinearLayout>

</ScrollView>