<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_quality_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/camerasdk_quality_title"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="10dip" />
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#00A8EF" />
    
    <TextView
        android:id="@+id/dialog_quality_high"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/camerasdk_selector_light"
        android:text="@string/camerasdk_quality_high"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="10dip" />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/dialog_quality_normal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/camerasdk_selector_light"
        android:text="@string/camerasdk_quality_normal"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="10dip" />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="?android:attr/listDivider" />
    <TextView
       android:id="@+id/dialog_quality_small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/camerasdk_selector_light"
        android:text="@string/camerasdk_quality_small"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="10dip" />
</LinearLayout>